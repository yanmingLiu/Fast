{
    // ========= 该项目专用的 Dart 配置 =========
    "[dart]": {
        "editor.defaultFormatter": "Dart-Code.dart-code",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "always",
            "source.organizeImports": "always"
        },
        // 开启 Flutter UI 引导线
        "dart.previewFlutterUiGuides": true
    },
    "editor.rulers": [
        80
    ],
}